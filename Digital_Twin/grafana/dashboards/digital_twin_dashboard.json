  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "id": 1,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "id": 1,
      "title": "Flask HTTP Request Rate",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": null },
      "targets": [
        {
          "expr": "sum(rate(flask_http_requests_total[5m])) by (method, status)",
          "legendFormat": "{{method}} - {{status}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "title": "Flask Request Latency (95th Percentile)",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": null },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(flask_http_requests_latency_seconds_bucket[5m])) by (le))",
          "legendFormat": "P95 Latency"
        }
      ],
      "unit": "s",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "id": 3,
      "title": "Celery Tasks Status",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": null },
      "targets": [
        {
          "expr": "sum(celery_tasks_total{state=\"SUCCESS\"})",
          "legendFormat": "Succeeded"
        },
        {
          "expr": "sum(celery_tasks_total{state=\"FAILURE\"})",
          "legendFormat": "Failed"
        }
      ],
      "reduceOptions": { "calcs": ["last"], "fields": "", "values": false },
      "orientation": "horizontal",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 8 }
    },
    {
      "id": 4,
      "title": "MQTT Messages",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": null },
      "targets": [
        {
          "expr": "rate(mqtt_messages_published_total[1m])",
          "legendFormat": "Published"
        },
        {
          "expr": "rate(mqtt_messages_received_total[1m])",
          "legendFormat": "Received (Ingestor)"
        }
      ],
      "gridPos": { "h": 8, "w": 16, "x": 8, "y": 8 }
    }
  ],
  "refresh": "10s",
