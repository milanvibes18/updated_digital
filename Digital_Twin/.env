JWT_SECRET_KEY=_REPLACE_WITH_YOUR_GENERATED_JWT_SECRET_KEY_

# Database (PostgreSQL)
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://dt_user:486258@postgres:5432/digital_twin

# These variables are needed by the postgres service in docker-compose
POSTGRES_USER=dt_user
POSTGRES_PASSWORD=486258
