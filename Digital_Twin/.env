# .env (Production-Ready Template - Fill in generated secrets)
# IMPORTANT: Add this file to your .gitignore! Do NOT commit real secrets.
# Create a .env.example file with placeholders to commit instead.

# Flask/App Secrets
FLASK_ENV=development # or production
FLASK_DEBUG=True # or False
SECRET_KEY=_REPLACE_WITH_YOUR_GENERATED_FLASK_SECRET_KEY_ # Use os.urandom(24)
JWT_SECRET_KEY=_REPLACE_WITH_YOUR_GENERATED_JWT_SECRET_KEY_ # Use os.urandom(32)

# Database (PostgreSQL)
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://dt_user:_REPLACE_WITH_YOUR_DB_PASSWORD_@postgres:5432/digital_twin

# These variables are needed by the postgres service in docker-compose
POSTGRES_USER=dt_user
POSTGRES_PASSWORD=_REPLACE_WITH_YOUR_DB_PASSWORD_ # Needs to match DATABASE_URL
POSTGRES_DB=digital_twin

# Redis
REDIS_URL=redis://redis:6379/0

# Celery (using Redis as broker/backend)
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# MQTT
MQTT_BROKER_HOST=mosquitto # Hostname within Docker network
MQTT_BROKER_PORT=1883
MQTT_INGEST_TOPIC=iot/device/+/data # Example topic

# Encryption Key (Generated from secure_database_manager.py generate_key)
# Must be a 32-byte key, base64 encoded
ENCRYPTION_KEY=_REPLACE_WITH_YOUR_GENERATED_BASE64_ENCRYPTION_KEY_
# AES_KEY is deprecated/redundant if ENCRYPTION_KEY is used correctly. Remove if not needed elsewhere.
# AES_KEY=_REPLACE_WITH_YOUR_GENERATED_AES_KEY_

# Alerting (Credentials should come from env vars, not alert_config.json)
SMTP_USERNAME=your_alert_email@example.com
SMTP_PASSWORD=_REPLACE_WITH_YOUR_EMAIL_PASSWORD_OR_APP_PASSWORD_
SLACK_WEBHOOK_URL=_REPLACE_WITH_YOUR_SLACK_WEBHOOK_URL_
WEBHOOK_URL=_REPLACE_WITH_YOUR_ALERT_WEBHOOK_URL_
# Example recipients (can also be loaded dynamically)
ALERT_EMAIL_RECIPIENTS=admin@example.com,support@example.com

# Docker-compose specific (Passwords should be strong and unique)
GF_SECURITY_ADMIN_PASSWORD=_REPLACE_WITH_YOUR_GRAFANA_ADMIN_PASSWORD_
INFLUXDB_ADMIN_PASSWORD=_REPLACE_WITH_YOUR_INFLUXDB_ADMIN_PASSWORD_
DOMAIN_NAME=localhost # Or your actual domain

# Add any other secrets your application uses
# SOME_OTHER_API_KEY=_REPLACE_WITH_YOUR_API_KEY_